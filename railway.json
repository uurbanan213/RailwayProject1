{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci",
    "watchPatterns": [
      "src/**",
      "server.js",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 5,
    "healthcheckInterval": 30,
    "restartPolicyType": "ON_FAILURE",
    "numReplicas": 1
  },
  "variables": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "NODE_OPTIONS": "--max-old-space-size=4096"
  }
}